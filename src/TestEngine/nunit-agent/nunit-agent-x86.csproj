<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>nunit.agent</RootNamespace>
    <TargetFrameworks>net20</TargetFrameworks>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>..\..\..\nunit.ico</ApplicationIcon>
    <PlatformTarget>x86</PlatformTarget>
    <IntermediateOutputPath>obj\$(Configuration)\x86\</IntermediateOutputPath>
    <GenerateSupportedRuntime>false</GenerateSupportedRuntime>
    <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='net20'">
    <Reference Include="System.Runtime.Remoting" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\EngineVersion.cs" LinkBase="Properties" />
    <Compile Include="..\nunit.engine.core\Internal\ExceptionHelper.cs" Link="ExceptionHelper.cs" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\..\..\nunit.ico">
      <Link>nunit.ico</Link>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\nunit.engine.api\nunit.engine.api.csproj" />
    <ProjectReference Include="..\nunit.engine.core\nunit.engine.core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <AgentFiles Include="$(TargetDir)nunit-agent-x86.exe;$(TargetDir)nunit-agent-x86.pdb;$(TargetDir)nunit-agent-x86.exe.config" />
    <AgentDirectory Include="$(SolutionDir)bin\$(ConfigurationName)\" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Message Importance="high" Text="Copying @(AgentFiles) to @(AgentDirectory)" />
    <Copy SourceFiles="@(AgentFiles)" DestinationFolder="@(AgentDirectory)" />
  </Target>
</Project>