  <ItemGroup>
    <Reference Include="nunit.engine.api">
      <HintPath>..\..\bin\$(Configuration)\engine\net40\nunit.engine.api.dll</HintPath>
    </Reference>
    <Reference Include="testcentric.engine">
      <HintPath>..\..\bin\$(Configuration)\engine\net40\testcentric.engine.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>